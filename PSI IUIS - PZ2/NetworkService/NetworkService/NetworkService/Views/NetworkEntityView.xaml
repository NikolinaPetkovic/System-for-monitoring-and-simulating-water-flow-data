<UserControl x:Class="NetworkService.Views.NetworkEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             mc:Ignorable="d" Height="730" Width="1220">
    <UserControl.DataContext>
        <viewModel:NetworkEntityViewModel />
    </UserControl.DataContext>

    <Grid Background="LightGray"
            Height="730"
            VerticalAlignment="Top">

        <Grid Background="LightSteelBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <RadioButton
                FontFamily="Times New Roman"
            IsChecked="{Binding IsNameRbSelected, Mode=TwoWay}" 
            Content="Name" 
            x:Name="NameRb"
            ToolTip="{Binding NameRadioToolTip}"
            HorizontalAlignment="Left" 
            Margin="60,50,0,0"
            Height="20" 
            Cursor="Hand"
            VerticalAlignment="Top" 
            FontSize="20" 
            FontWeight="Bold" 
            Width="90" 
            Foreground="Black"/>

            <RadioButton 
                FontFamily="Times New Roman"
            IsChecked="{Binding IsTypeRbSelected, Mode=TwoWay}" 
            Content="Type" 
            ToolTip="{Binding TypeRadioToolTip}"
            Cursor="Hand"
            x:Name="TypeRb"
            HorizontalAlignment="Left" 
            Height="70" 
            VerticalAlignment="Top" 
            FontSize="20" 
            FontWeight="Bold" 
            Width="90"
            Foreground="Black" 
            Margin="60,100,0,0"/>

            <TextBox 
            HorizontalAlignment="Left" 
            Height="40" 
            ToolTip="{Binding SearchTextBoxToolTip}"
            Margin="260,80,0,0"            
            TextWrapping="Wrap" 
            Text="{Binding SearchValueText}" 
            VerticalAlignment="Top" 
            Width="300" 
            FontSize="12" 
            VerticalContentAlignment="Center"/>

            <Label 
            Content="Input name or type " 
            Margin="260,40,745,630"
            FontSize="19"
            FontFamily="Times New Roman"/>

            <Button ToolTip="Reset" Background="CornflowerBlue" BorderBrush="Black" Cursor="Hand" Margin="624,80,433,610" Content="Reset" FontSize="20" FontFamily="Times New Roman"
                    Command="{Binding ResetCommand}"/>



            <Button 
            Background="CornflowerBlue"
            BorderBrush="Black"
            Content="Search"
            HorizontalAlignment="Left"
            Width="160"
            Cursor="Hand"
            FontFamily="Times New Roman"
            FontSize="20"
            FontStretch="ExtraExpanded" 
            Margin="840,80,0,610"
                
            ToolTip="Search"

            Command="{Binding SearchEntity}"
            />

            <Button
            Foreground="Black" 
            Background="PaleVioletRed" 
            Content="Delete" 
            BorderBrush="Black"
            Cursor="Hand"
            ToolTip="Delete"
            HorizontalAlignment="Left" 
            FontFamily="Times New Roman"
            FontSize="20"
            FontStretch="ExtraExpanded"
            Width="142" 
            HorizontalContentAlignment="Center"   
            Command="{Binding DeleteCommand}" 
            Panel.ZIndex="{Binding ZIndexButton1}"
            Margin="1048,80,0,610" />


            <Button
                Foreground="Black" 
                Background="CornflowerBlue" 
                Content="Delete" 
                BorderBrush="Black"
                Cursor="Hand"
                ToolTip="Delete"
                HorizontalAlignment="Left" 
                FontFamily="Times New Roman"
                FontSize="20"
                FontStretch="ExtraExpanded"
                Width="142" 
                HorizontalContentAlignment="Center"   
                Command="{Binding DeleteCommand2}" 
                Panel.ZIndex="{Binding ZIndexButton2}"
                Margin="1048,80,0,610" />



            <Label 
            Content="Id:" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"  
            FontSize="20" 
            Height="50" 
            Width="80" 
            FontFamily="Times New Roman"
            FontWeight="Bold" 
            Margin="60,482,0,0" />

            <Label 
            Content="Name:" 
            BorderBrush="Black"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"  
            FontSize="20" 
            Height="40" 
            Width="74" 
            FontFamily="Times New Roman"
            FontStretch="Medium"
            FontWeight="Bold" 
            Margin="460,485,0,0" />

            <Label 
            Content="Type:" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"  
            FontFamily="Times New Roman"
            FontSize="20"
            FontStretch="ExtraExpanded"  
            Height="40" 
            Width="75" 
            FontWeight="Bold" 
            Margin="875,487,0,0" />

            <ComboBox 
            HorizontalAlignment="Left" 
            Background="Gray" 
            SelectedItem="{Binding SelectedType}" 
            ItemsSource="{Binding Types}" 
            Height="40"
            Cursor="Hand"
            ToolTip="{Binding TypeComboBoxToolTip}"
            Margin="875,527,0,163" 
            Width="270" />

            <TextBox 
            HorizontalAlignment="Left" 
            Text="{Binding IdText}" 
            FontSize="12" 
            ToolTip="{Binding IdTextBoxToolTip}"
            Height="40"  
            TextWrapping="Wrap" 
            Margin="60,527,0,163" 
            Width="315"/>

            <TextBox 
            HorizontalAlignment="Left" 
            Text="{Binding NameText}" 
                ToolTip="{Binding NameTextBoxToolTip}"
            Height="40" 
            FontSize="12" 
            TextWrapping="WrapWithOverflow" 
            Margin="460,527,0,163" 
            Width="327" />

            <TextBlock 
            Text="Form to add"
            FontSize="40"
            Foreground="Black"
                
            FontFamily="Cooper Black"
            Margin="483,430,327,245" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.087"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.727"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Margin="875,566,110,103"
            Foreground="Red" 
            Text="{Binding ErrorMSg}"
            />
            <TextBlock Margin="60,566,880,102"
             Foreground="Red" 
             Text="{Binding ErrorIdMsg}"
             />
            <TextBlock Margin="460,566,525,114"
             Foreground="Red" 
             Text="{Binding ErrorMSgName}"
             />
            <TextBlock Margin="262,125,723,555"
             Foreground="Red" 
             Text="{Binding SearchError}"
             />
            <Button 
                ToolTip="Add"
            Foreground="Black" 
            Content="Add" 
            Cursor="Hand"
            FontFamily="Times New Roman"
            FontSize="20"
            FontStretch="ExtraExpanded"
            Background="CornflowerBlue"
            BorderBrush="Black"
            Command="{Binding AddCommand}" 
            HorizontalAlignment="Left" 
            Width="235" 
            Margin="650,655,0,30"/>

            <Button BorderBrush="Black" FontFamily="Times New Roman" ToolTip="Undo" Cursor="Hand" Content="Undo" Command="{Binding UndoAllCommand}" FontSize="20" Margin="920,655,75,30" Background="PaleVioletRed"/>
            <ListBox Margin="60,628,642,30" ItemsSource="{Binding ActionHistories}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Description}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label 
                Content="History:" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"  
                FontSize="20" 
                Height="50" 
                Width="80" 
                FontFamily="Times New Roman"
                FontWeight="Bold" 
                Margin="65,590,0,0" />



        </Grid>
        <DataGrid 
             x:Name="EntitiesDataGrid" 
             ItemsSource="{Binding EntitiesToShow}" 
             SelectedItem="{Binding SelectedEntity}"
             AutoGenerateColumns="False"
             ScrollViewer.CanContentScroll="False" 
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Panel.ZIndex="{Binding ZIndex1}"
            SelectionMode="Single" 
            Height="273" 
            Margin="0,150,0,0" 
            VerticalAlignment="Top" 
            Grid.ColumnSpan="2" 
            Grid.RowSpan="2" >

            <DataGrid.Columns>
                <DataGridTextColumn
                 Header="ID"
                 IsReadOnly="True"
                 Binding="{Binding Id}"
                 Width="*"
                 />

                <DataGridTextColumn
                 Header="Name"
                 IsReadOnly="True"
                 Binding="{Binding Name}"
                 Width="*"
                 >

                </DataGridTextColumn>

                <DataGridTemplateColumn 
                Header="Image" 
                Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Type.PicturePath}" Width="100" Height="80"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn 
                 Header="Value" 
                 IsReadOnly="True"
                 Width="*"
                 Binding="{Binding Value}"/>

            </DataGrid.Columns>
        </DataGrid>


        <DataGrid 
     x:Name="EntitiesDataGrid2" 
      Panel.ZIndex="{Binding ZIndex2}"
     ItemsSource="{Binding SearchedEntities}" 
     SelectedItem="{Binding SelectedEntity2}"
     AutoGenerateColumns="False"
     ScrollViewer.CanContentScroll="False" 
     ScrollViewer.VerticalScrollBarVisibility="Auto"
     ScrollViewer.HorizontalScrollBarVisibility="Auto"
    SelectionMode="Single" 
     Height="273" 
       Margin="0,150,0,0" 
    VerticalAlignment="Top" 
    Grid.ColumnSpan="2" 
    Grid.RowSpan="2">

            <DataGrid.Columns>
                <DataGridTextColumn
         Header="ID"
         IsReadOnly="True"
         Binding="{Binding Id}"
         Width="*"
         />

                <DataGridTextColumn
         Header="Name"
         IsReadOnly="True"
         Binding="{Binding Name}"
         Width="*"
         >

                </DataGridTextColumn>

                <DataGridTemplateColumn 
        Header="Image" 
        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Type.PicturePath}" Width="100" Height="80"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn 
         Header="Value" 
         IsReadOnly="True"
         Width="*"
         Binding="{Binding Value}"/>

            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</UserControl>
